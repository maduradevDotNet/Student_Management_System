@model StudentManagementSystem.Models.Student

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Student</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="alert alert-warning text-center">
            <p>Are you sure you want to delete the student <strong>@Model.FirstName @Model.LastName</strong>?</p>
        </div>

        <form method="post">
            <div class="row">
                <div class="col-6 col-md-3 offset-md-3">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
