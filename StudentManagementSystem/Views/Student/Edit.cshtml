@model StudentManagementSystem.Models.Student

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Student</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <!-- Display validation errors -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- First Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="FirstName" class="form-control border shadow" />
                    <label asp-for="FirstName" class="ms-2">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="LastName" class="form-control border shadow" />
                    <label asp-for="LastName" class="ms-2">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Date of Birth -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="DateOfBirth" class="form-control border shadow" type="date" />
                    <label asp-for="DateOfBirth" class="ms-2">Date of Birth</label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Gender -->
                <div class="form-floating py-1 col-12">
                    <select asp-for="Gender" class="form-select border shadow">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <label asp-for="Gender" class="ms-2">Gender</label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <!-- Course -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Course" class="form-control border shadow" />
                    <label asp-for="Course" class="ms-2">Course</label>
                    <span asp-validation-for="Course" class="text-danger"></span>
                </div>

                <!-- Year -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Year" class="form-control border shadow" />
                    <label asp-for="Year" class="ms-2">Year</label>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <!-- GPA -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="GPA" class="form-control border shadow" />
                    <label asp-for="GPA" class="ms-2">GPA</label>
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>

                <!-- Submit and Cancel buttons -->
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
